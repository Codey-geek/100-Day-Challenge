package DataStructures;

import java.util.Scanner;

public class InsertionSort {
	protected void insertionSort(int a[])
	{
		int temp, i, j, l;
		// loop for unsorted list traversal
		for (i = 1; i < a.length; i++) {		
			temp = a[i];
			j = i;
			// loop for comparison with the sorted element
			while (j > 0 && a[j - 1] > temp) {
				a[j] = a[j - 1];
				j--;
			}
			a[j] = temp;
			System.out.print("\nArray after " + i + " iteration is ");
			for (l = 0; l < a.length; l++)
				System.out.print(a[l] + " ");
		}
		System.out.println("\nSorted array after insertion sort is ");
		for (i = 0; i < a.length; i++)
			System.out.print(a[i] + " ");
		System.out.println();

	}

	public static void main(String[] args) {
		//Starting the timer
		long startTime = System.nanoTime();
		System.out.println("Program started at "+startTime);
		Scanner s = new Scanner(System.in);
		System.out.println("Enter array elements: ");
		int arr[] = new int[10];
		for (int k = 0; k < arr.length; k++) {
			arr[k] = s.nextInt();
		}
		InsertionSort obj = new InsertionSort();
		obj.insertionSort(arr);
		//Ending the timer
		long endTime   = System.nanoTime();
		System.out.println("Program ended at "+endTime);
		//Total Time taken is obtained as follows
		long totalTime = endTime - startTime;
		System.out.println("Total time taken by the Insertion Sort to execute is: "+totalTime+" nanoseconds");
	}//main ends

}
